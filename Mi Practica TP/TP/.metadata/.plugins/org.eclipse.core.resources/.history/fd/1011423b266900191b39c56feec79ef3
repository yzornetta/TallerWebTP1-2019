package ar.edu.unlam.tallerweb1.persistencia;
import ar.edu.unlam.tallerweb1.SpringTest;
import ar.edu.unlam.tallerweb1.modelo.*;
import org.hibernate.Session;
import org.hibernate.criterion.Restrictions;
import org.junit.Test;
import org.springframework.test.annotation.Rollback;
import org.springframework.transaction.annotation.Transactional;
import static org.assertj.core.api.Assertions.*;
import java.util.List;

public class TropicoCancer extends SpringTest {
	
	@Test@Rollback@Transactional
	public void PaisesTropCanTest() {
		
		float LatTCancer = (float) 23.43722;		

		Ubicacion ubicacion1 = new Ubicacion();
		ubicacion1.setLatitud((float) 23.43722);
		ubicacion1.setLongitud((float) 0.00);
		
		Continente continente1 = new Continente();
		continente1.setNombre("America");
		
		Pais pais = new Pais();
		pais.setNombre("Argentina");
		pais.setHabitantes(44000000);
		pais.setIdioma("Espaniol");
		pais.setCapital("La Plata");
		pais.setContinente(continente1);
		
		Ciudad ciudad1 = new Ciudad();
		ciudad1.setNombre("La Plata");
		
		Session session = getSession();
		session.save(ubicacion1);
		session.save(continente1);
		session.save(pais);
		
		Continente continente2 = new Continente();
		continente2.setNombre("America");
		
		Pais pais2 = new Pais();
		pais2.setNombre("USA");
		pais2.setHabitantes(327000000);
		pais2.setIdioma("Ingles");
		pais2.setCapital("Washington");
		pais2.setContinente(continente2);
			
		session.save(continente2);
		session.save(pais2);

		
	}
}
