package ar.edu.unlam.tallerweb1.persistencia;

import ar.edu.unlam.tallerweb1.SpringTest;
import ar.edu.unlam.tallerweb1.modelo.*;

import org.hibernate.Session;
import org.junit.Test;
import org.springframework.test.annotation.Rollback;
import org.springframework.transaction.annotation.Transactional;

import static org.assertj.core.api.Assertions.*;

import java.util.List;

public class PaisIdiomaTest extends SpringTest{

@Test@Rollback@Transactional
	public void pruebaIdiomaPais() {
	
	Continente continente = new Continente();
	continente.setNombre("America");
	
	Pais pais = new Pais();
	pais.setNombre("Argentina");
	pais.setHabitantes(44000000);
	pais.setIdioma("Espaniol");
	pais.setCapital("La Plata");
	pais.setContinente(continente);
	
	Session session = getSession();	
	session.save(continente);
	session.save(pais);
	
	Continente continente2 = new Continente();
	continente2.setNombre("America");
	
	Pais pais2 = new Pais();
	pais2.setNombre("USA");
	pais2.setHabitantes(327000000);
	pais2.setIdioma("Ingles");
	pais2.setCapital("Washington");
	pais2.setContinente(continente);
		
	session.save(continente2);
	session.save(pais2);

	Continente continente3 = new Continente();
	continente3.setNombre("Europa");
	
	Pais pais3 = new Pais();
	pais3.setNombre("Inglaterra");
	pais3.setHabitantes(55000000);
	pais3.setIdioma("Ingles");
	pais3.setCapital("Londres");
	pais3.setContinente(continente);
		
	session.save(continente3);
	session.save(pais3);

	Continente continente4 = new Continente();
	continente4.setNombre("America");
	
	Pais pais4 = new Pais();
	pais4.setNombre("Canada");
	pais4.setHabitantes(37000000);
	pais4.setIdioma("Ingles");
	pais4.setCapital("Ottawa");
	pais4.setContinente(continente);
		
	session.save(continente4);
	session.save(pais4);

	List<Pais> paisesIngles = session.createCriteria(Pais.class).list();
	
	}
}
